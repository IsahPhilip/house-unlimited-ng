{
  "version": 2,
  "framework": "vite",
  "installCommand": "npm install --prefix=./backend && npm install",
  "buildCommand": "npm run build && npm run build --prefix=./backend",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "backend/src/index.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
